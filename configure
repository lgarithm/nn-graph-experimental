#!/bin/sh
set -e

HAVE_CUDA=0
if [ -f /usr/include/cuda_runtime.h ]; then
    HAVE_CUDA=1
fi

BUILD_TESTS=0
BUILD_GTEST=0
BUILD_EXAMPLES=1
BUILD_GPU_EXAMPLES=0
USE_BLAS=0
BLAS_HOME=
USE_CMAKE=1
USE_CLANG_TIDY=0
ENABLE_CUDA=${HAVE_CUDA}
CUDA_HOME=/usr/local/cuda
VERBOSE=0

parse_args() {
    for i in "$@"; do
        case $i in
        --prefix=*)
            PREFIX="${i#*=}"
            ;;
        --with-blas=*)
            BLAS_HOME="${i#*=}"
            ;;
        --use-blas)
            USE_BLAS=1
            ;;
        --tests)
            BUILD_TESTS=1
            ;;
        --gpu-examples)
            BUILD_GPU_EXAMPLES=1
            ;;
        --no-tests)
            BUILD_TESTS=0
            ;;
        --build-gtest)
            BUILD_GTEST=1
            ;;
        --tidy)
            USE_CLANG_TIDY=1
            ;;
        --simple)
            USE_CMAKE=0
            ;;
        --disable-cuda)
            ENABLE_CUDA=0
            ;;
        --enable-cuda)
            ENABLE_CUDA=1
            ;;
        --verbose)
            VERBOSE=1
            ;;
        *)
            echo "unknown argument $i"
            exit 1
            ;;
        esac
    done
}

CMAKE_FLAGS=

add_cmake_flag() {
    echo "usinig $1=$2"
    CMAKE_FLAGS="$CMAKE_FLAGS -D$1=$2"
}

pass_cmake_flag_from_env() {
    local name=$1
    local env_key=$2
    if [ -z ${env_key} ]; then
        env_key=$name
    fi
    local val=$(eval echo \$$env_key)
    if [ ! -z "$val" ]; then
        add_cmake_flag $name $val
    fi
}

add_cmake_flags() {
    if [ ${BUILD_TESTS} -eq 1 ]; then
        if [ ${BUILD_GTEST} -eq 1 ]; then
            pass_cmake_flag_from_env GTEST_GIT_URL
        fi
        add_cmake_flag BUILD_GTEST ${BUILD_GTEST}
    fi

    add_cmake_flag ENABLE_CUDA ${ENABLE_CUDA}
    add_cmake_flag BUILD_TESTS ${BUILD_TESTS}
    add_cmake_flag BUILD_EXAMPLES ${BUILD_EXAMPLES}
    add_cmake_flag BUILD_GPU_EXAMPLES ${BUILD_GPU_EXAMPLES}

    add_cmake_flag CMAKE_PREFIX_PATH "$HOME/local;$HOME/local/openblas:$HOME/local/gtest"

    add_cmake_flag EXECUTABLE_OUTPUT_PATH $(pwd)/bin
    add_cmake_flag LIBRARY_OUTPUT_PATH $(pwd)/lib
    add_cmake_flag CMAKE_BUILD_TYPE Release

    add_cmake_flag CMAKE_EXPORT_COMPILE_COMMANDS 1
    add_cmake_flag CMAKE_VERBOSE_MAKEFILE ${VERBOSE}

    add_cmake_flag USE_CLANG_TIDY ${USE_CLANG_TIDY}

    add_cmake_flag USE_OPENBLAS ${USE_BLAS}
    if [ ! -z "${BLAS_HOME}" ]; then
        add_cmake_flag BLAS_HOME ${BLAS_HOME}
    fi

    pass_cmake_flag_from_env STDTRACER_GIT_URL
    pass_cmake_flag_from_env STDTENSOR_GIT_URL
    pass_cmake_flag_from_env STDNN_OPS_GIT_URL

    add_cmake_flag STDTENSOR_GIT_TAG $(head -n 1 ./deps/stdtensor)
    add_cmake_flag STDNN_OPS_GIT_TAG $(head -n 1 ./deps/stdnn-ops)

    if [ ${ENABLE_CUDA} -eq 1 ]; then
        pass_cmake_flag_from_env STDNN_OPS_CUDA_GIT_URL
        add_cmake_flag CUDA_TOOLKIT_ROOT_DIR $CUDA_HOME
        add_cmake_flag CMAKE_CUDA_COMPILER $CUDA_HOME/bin/nvcc
        add_cmake_flag STDNN_OPS_CUDA_GIT_TAG $(head -n 1 ./deps/stdnn-ops-cuda)
    fi
}

cleanup_cmake_cache() {
    if [ -f CMakeCache.txt ]; then
        rm CMakeCache.txt
    fi
    if [ -d 3rdparty ]; then
        for cmake_cache in $(find 3rdparty/ | grep CMakeCache.txt); do
            rm $cmake_cache
        done
    fi
}

log_config_var() {
    local name=$1
    local val=$(eval echo \$$name)
    echo "$name=$val"
}

main() {
    echo "configure with $@"
    parse_args $@

    log_config_var BUILD_TESTS
    log_config_var BUILD_GTEST
    log_config_var BUILD_EXAMPLES
    log_config_var BUILD_GPU_EXAMPLES
    log_config_var USE_BLAS
    log_config_var ENABLE_CUDA

    if [ ${USE_CMAKE} -eq 0 ]; then
        echo "TODO: support build without cmake"
        exit 1
    else
        add_cmake_flags
        cleanup_cmake_cache
        cmake . $CMAKE_FLAGS
    fi
}

main $@
